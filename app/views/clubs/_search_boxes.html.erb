<section class='clubs-container' ng-controller="ClubCtrl">
  <div class="userLocation">Your current location is detected as </div>
  <br>
  <hr id="mainLine">
  <br>
  <div class="searchBoxContainer">
    <input ng-model="query" id="searchInput" placeholder="Search for clubs" autofocus />
    <i> OR </i> 
  </div>
  <%= render 'clubs/bylocation' %> 
  <br><br><br>
    <section class="clubs">
    <section class='club' ng-repeat="club in clubs | filter:query">
      <a id="clubName" ng-bind="club.name" href="{{club.path}}"></a>
        <br/>
        <article class="address" ng-bind="club.address"></article>
        <article class="post_code" ng-bind="club.post_code"></article>      
     
      <br/>

    </section>
  </section>
</section>