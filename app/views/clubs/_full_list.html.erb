<% content_for :angular do %>
  var ClubSearch = angular.module('ClubSearch', [])

  ClubSearch.controller("ClubCtrl", function ($scope){
    $scope.clubs = [ 
              <% @clubs.each do |club| %>
              {
                    'name': '<%= club.name %>',
                    'path': '<%= club_path(club) %>',
                    'address': '<%= club.address %>',
                    'post_code': '<%= club.post_code %>',
              },
    <% end %>
    ];
  });
<% end %>
 
<%= yield %>