<% if player_signed_in? %>
  <li>
    <% if current_player.provider == "facebook" %>
      <%= current_player.first_name %> 
      <%= current_player.last_name %>
      <%= image_tag current_player.image_url %>
    <% else %>
      Welcome <%= current_player.email %>
    <% end %>
  </li>
  <li>
    <%= link_to('Logout', destroy_player_session_path, :method => :delete) %> 
  </li>

<% else %>
  <li>
    <%= link_to('Login', new_player_session_path)  %>  
  </li>
  <li>
    <%= link_to "Sign in with Facebook", player_omniauth_authorize_path(:facebook) %>
  </li>
<% end %>

<% if player_signed_in? %>
  <li>
    <%= link_to('Edit registration', edit_player_registration_path) %>
  </li>
<% else %>
  <li>
    <%= link_to('Register', new_player_registration_path) %>
  </li>
  <% end %>
  <%= yield %>