<div id="container" class='match' data-id="<%= @match.id %>" > 

	
	<section>

		<h2 id="p1-name" data-id="<%= @match.players.first.id %>" >

			<%= @match.players.first.name %>

		</h2>

		<article id="p1-points" >

			<%= @match.scores.first.current_game.points %> 

		</article>

		<aside id="p1-games" >

			<%= @match.scores.first.won_games %>

		</aside>

		<!-- <h4>
			server-marker
		</h4> -->

		<nav>

			<%= link_to "Back", '', id: 'p1-back' %>

		</nav>

	</section>


	<section>

		<h2 id="p2-name" data-id="<%=@match.players.last.id%>" >

			<%= @match.players.last.name %>

		</h2>

		<article id='p2-points'>

			<%= @match.scores.last.current_game.points %>

		</article>

		<aside id="p2-games">

			<%= @match.scores.last.won_games %>

		</aside>

		<!-- <h4>
			server-marker
		</h4> -->

		<nav>

			<%= link_to "Back", '', id: 'p2-back' %>

		</nav>

	</section>
	<% if @match.over? %>

	Winner is: <%= @match.find_winner.name %>

	<% end %>


</div>




