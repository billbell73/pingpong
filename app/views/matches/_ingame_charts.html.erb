<section class='ingameCharts' ng-app="App">
	<div class="charts" ng-controller="ChartController">
			<div class="chart_header">
	      <h2 class="chart_title" >lovely charts</h2>
	    </div>
	    <%= render('table')%>
			<section class='key'>
				<article class='player1'><%= @match.name_of_player(1) %>

				</article>
				<p class='player_name'><%= @match.name_of_player(2) %></p>
			</section>

	    <svg xmlns="http://www.w3.org/2000/svg" class="chart_content">
	      <path class="chart_line1" ng-attr-d="{{linePath1()}}"></path>
	      <path class="chart_line2" ng-attr-d="{{linePath2()}}"></path>
	      <circle class="chart_circle1" r="6" ng-repeat="p in points_1" ng-attr-cx="{{p.x}}" ng-attr-cy="{{p.y}}"></circle>
	      <circle class="chart_circle2" r="6" ng-repeat="p in points_2" ng-attr-cx="{{p.x}}" ng-attr-cy="{{p.y}}"></circle>
	    </svg>

	    <div class="pie">
	    	<p class='player_name'><%= @match.name_of_player(1) %></p>
	    	<p class='points_won' ng-bind-template="Points won on serve: {{p1ServePercentage}}%">Points won on serve</p>
	    	<pie data='pieData[0]' colors='colors1' ></pie>
	    </div>

	    <div class="pie">
	    	<p class='player_name'><%= @match.name_of_player(2) %></p>
	    	<p class='points_won' ng-bind-template="Points won on serve: {{p2ServePercentage}}%">Points won on serve</p>
	    	<pie data='pieData[1]' colors='colors2'></pie>
	    </div>
	</div>
</section>
